<head>
  <link rel="stylesheet" href="/styles/recipes.css">
  <link rel="stylesheet" href="/styles/modalRecipes.css">

  {% include "./parts/styles.njk" %}
</head>

<body>
  <header>
    {% include "./parts/logo.njk" %}
    {% include "./parts/links.njk" %}
  </header>

  <main>
    <a href="/create">Nova Receita</a>
    
    <div class="recipes">
      {% for recipe in recipes %}
        <div id="{{ recipe.id }}" class="mostPopularRecipes">
          <img src="{{ recipe.image }}" alt="">
          <h3>{{ recipe.title }}</h3>
          <p>por {{ recipe.author }}</p>
        </div>
      {% endfor %}
    </div>
  </main>

  {% include "./parts/footer.njk" %}

  <div id="modalRecipe0" class="modalContainer">
    <div class="modal">
      <button class="close">X</button>
      <img src="/images/burger.png" alt="">
      <h3>Triplo bacon burger</h3>
      <p>por Jorge Relato</p>
    </div>
  </div>

  <div id="modalRecipe1" class="modalContainer">
    <div class="modal">
      <button class="close">X</button>
      <img src="/images/pizza.png" alt="">
      <h3>Pizza 4 estações</h3>
      <p>por Fabiana Melo</p>
    </div>
  </div>

  <div id="modalRecipe2" class="modalContainer">
    <div class="modal">
      <button class="close">X</button>
      <img src="/images/espaguete.png" alt="">
      <h3>Espaguete ao alho</h3>
      <p>por Júlia Kinoto</p>
    </div>
  </div>

  <div id="modalRecipe3" class="modalContainer">
    <div class="modal">
      <button class="close">X</button>
      <img src="/images/lasanha.png" alt="">
      <h3>Lasanha mac n’ cheese</h3>
      <p>por Juliano Vieira</p>
    </div>
  </div>

  <div id="modalRecipe4" class="modalContainer">
    <div class="modal">
      <button class="close">X</button>
      <img src="/images/doce.png" alt="">
      <h3>Docinhos pão-do-céu</h3>
      <p>por Ricardo Golvea</p>
    </div>
  </div>

  <div id="modalRecipe5" class="modalContainer">
    <div class="modal">
      <button class="close">X</button>
      <img src="/images/burger.png" alt="">
      <h3>Asinhas de frango ao barbecue</h3>
      <p>por Vania Steroski</p>
    </div>
  </div>

  <script src="/scripts/script.js"></script>

</body>